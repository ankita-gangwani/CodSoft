import java.util.Random;
import java.util.Scanner;

class Game{
    public void GamePlay(){
        Scanner sc = new Scanner(System.in);
        
        int Guess, RandomNum;
        
        Random rand = new Random();
        RandomNum = rand.nextInt(100) + 1;
        
        while(true){
            System.out.println("Guess the number from 0 to 100 : ");
            Guess = sc.nextInt();
        
            while(Guess<0 || Guess>100){
                System.out.println("Please Enter the Number from 0 to 100");
                System.out.println("Guess the number from 0 to 100 : ");
                Guess = sc.nextInt();
            
            }
            if(Guess == RandomNum){
            System.out.println("Glad ! You Guessed the Number");
            break;
            }
            else if(Guess>RandomNum){
            System.out.println("You Guessed the Greater One !");
            }
            else{
            System.out.println("You Guessed the Lower One !");
            }
        }
    }
