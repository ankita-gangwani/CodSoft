import java.util.Random;
import java.util.Scanner;

class Game{
    public void GamePlay(){
        Scanner sc = new Scanner(System.in);
        
        int Guess, RandomNum;
        
        Random rand = new Random();
        RandomNum = rand.nextInt(100) + 1;
        
        while(true){
            System.out.println("Guess the number from 0 to 100 : ");
            Guess = sc.nextInt();
        
            while(Guess<0 || Guess>100){
                System.out.println("Please Enter the Number from 0 to 100");
                System.out.println("Guess the number from 0 to 100 : ");
                Guess = sc.nextInt();
            
            }
            if(Guess == RandomNum){
            System.out.println("Glad ! You Guessed the Number");
            break;
            }
            else if(Guess>RandomNum){
            System.out.println("You Guessed the Greater One !");
            }
            else{
            System.out.println("You Guessed the Lower One !");
            }
        }
    }
}

class RandomNumber {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        
        Game obj = new Game();
        obj.GamePlay();
        
        while(true){
            System.out.println("Want to Play Again !\n1. Yes\n2. No");
            int opt = sc.nextInt();
        
            if(opt==1){
                obj.GamePlay();
            }
            else{
                System.out.println("Thanks for Playing, Have a Nice Day !");
                break;
            }
        }
        
    }
}
